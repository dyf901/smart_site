<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zty.smart_site.dao.AnintegralDao">
    <!--增加积分明细-->
    <insert id="InsertIntegral" parameterType="java.util.Map">
        INSERT INTO `smart_site`.`integral` (`content`, `up_time`, `staff_id`) VALUES (#{content}, now(), #{staff_id});
    </insert>

    <!--查询个人积分明细-->
    <select id="FindIntegral" parameterType="java.util.Map">
        <bind name="page" value="pageSize*(pageNo-1)"></bind>
        SELECT `id`, `content`, `up_time` WHERE `staff_id`=#{staff_id} limit #{page},#{pageSize}
    </select>
</mapper>